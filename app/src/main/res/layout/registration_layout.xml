<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <TextView
        android:text="Registeration Form"

        android:id="@+id/title"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/pageTittleStyle"
        />

    <EditText
        android:id="@+id/username"
        android:hint="Username"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/ic_person_black_24dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        />
    <EditText
        android:id="@+id/phoneno"
        android:drawableLeft="@drawable/ic_phone_android_black_24dp"
        android:hint="Phone No"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:background="@drawable/edittext_bg"
        />
    <EditText
        android:id="@+id/password"
        android:hint="Password"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phoneno"
        />
    <EditText
        android:id="@+id/place"
        android:drawableLeft="@drawable/ic_place_black_24dp"
        android:hint="Address"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        />
    <EditText
        android:id="@+id/email"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/place"
        />
    <CheckBox
        android:id="@+id/accept"
        android:text="Accept terms and agreements"
        android:layout_width="match_parent"
        android:layout_below="@id/imagepp"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_below="@+id/accept"

        />
    <RadioGroup
        android:id="@+id/genderr"
        android:orientation="horizontal"
        android:layout_below="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RadioButton android:id="@+id/male"
            android:layout_width="wrap_content"
            android:hint="Male"
            android:layout_height="wrap_content" />
        <RadioButton android:id="@+id/female"
            android:layout_width="wrap_content"
            android:hint="Female"

            android:layout_height="wrap_content"
            />
    </RadioGroup>
    <ImageView
        android:id="@+id/imagepp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/genderr"/>



</RelativeLayout>
    </ScrollView>